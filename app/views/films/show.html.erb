<div class = "container">
  <h1>詳細ページ</h1>
  <h3>詳しくチェック！</h3>
  <div class="clearfix">
    <%= image_tag @film.image_url, :size =>'500x300', class: "float-md-left mr-md-4" %>
    <h3 class:"mt-4 mt-md-0"><%= @film.title %></h3>
    <p>　　主演：<%= @film.actor %></p>
    <p>　　公開：<%= @film.released_year %>年</p>
    <p>サービス：<%= @film.service.name %></p>
    <% if @film.user_id != current_user.id %>
      <div class="film-menu">
        <p>　投稿者：<%= link_to(@film.user.name, user_path(@film.user.id), class: "link" ) %></p>
      </div>
    <% end %>
    <% if current_user.already_liked?(@film) %>
      <%= link_to film_like_path(@film), method: :delete do %>
        <span class="fa fa-heart like-btn-unlike"></span>
      <% end %>
    <% else %>
      <%= link_to film_likes_path(@film), method: :post do %>
        <span class="fa fa-heart like-btn"></span>
      <% end %>
    <% end %> 
    <%= @film.likes.count %>
    <% if false %>
      <p>いいねしたユーザー</p>
      <% @film.liked_users.each do |user| %>
        <li><%= user.name %></li>
      <% end %>
    <% end %>
    <% if @film.user_id == current_user.id %>
      <div class="film-menu">
        <%= link_to "編集する", edit_film_path(@film.id), class: "btn btn-warning" %>
        <%= link_to "削除する", film_path, method: :delete, class: "btn btn-outline-warning" %>
      </div>
      <br>
      <p><%= @film.created_at.strftime("%Y/%m/%d %H:%M") %></p>
    <% end %>   
  </div>
  <h5 class="mt-4"><レビュー></h3>
  <p><%= @film.body %></p>
</div>